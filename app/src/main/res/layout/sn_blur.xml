<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="48dp"
    android:layout_marginLeft="48dp"
    android:layout_gravity="center"
    android:padding="8dp"
    android:background="#b434ea02">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Social Network ',-*-,'"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fbfbfc"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/title"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="\n Facebook Name: Sai Tawng Pha"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fbfbfc"
        android:layout_below="@+id/message"
        android:layout_marginTop="8dp"
        android:id="@+id/l2"/>

    <TextView
        android:id="@+id/wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/l2"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="\n Wechat ID: saitawngpha"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fbfbfc"
        android:layout_below="@+id/wechat"
        android:layout_marginTop="8dp"
        android:id="@+id/l3"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/l3"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="\n Line ID: saitawngfa"/>


</RelativeLayout>